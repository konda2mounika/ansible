[Unit]
Description = User Service
[Service]
User=roboshop
Environment=MONGO=true
Environment=REDIS_HOST=redis-{{ENV}}.roboshop.internal
Environment=MONGO_URL="mongodb://{{SECRETS.DOCDB_USERNAME}}:{{SECRETS.DOCDB_PASSWORD}}@{{MONGO_URL}}:27017/users?tls=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false"
ExecStart=/bin/node /home/roboshop/user/server.js
SyslogIdentifier=user

[Install]
WantedBy=multi-user.target